  "guides": [
    {
      "id": "cpr",
      "title": "CPR (Cardiopulmonary Resuscitation)",
      "category": "Critical",
      "description": "Life-saving technique for cardiac arrest",
      "iconResource": "ic_cpr",
      "searchKeywords": "cpr,heart,cardiac,arrest,breathing,chest,compression",
      "estimatedTime": "Until help arrives",
      "difficulty": "Advanced",
      "isFavorite": false,
      "steps": [
        {
          "id": "cpr_step_1",
          "stepNumber": 1,
          "instruction": "Check responsiveness by tapping shoulders and shouting 'Are you OK?'",
          "imageResource": null,
          "voiceScript": "Check if the person is responsive",
          "warnings": "Do not move if spinal injury is suspected",
          "isEmergencyStep": true
        },
        {
          "id": "cpr_step_2",
          "stepNumber": 2,
          "instruction": "Call 911 immediately or have someone else do it",
          "imageResource": null,
          "voiceScript": "Call emergency services now",
          "warnings": "Time is critical",
          "isEmergencyStep": true
        },
        {
          "id": "cpr_step_3",
          "stepNumber": 3,
          "instruction": "Position hands on center of chest, between nipples",
          "imageResource": "cpr_hand_position",
          "voiceScript": "Place heel of one hand on breastbone, other hand on top",
          "warnings": "Ensure proper hand placement",
          "isEmergencyStep": false
        },
        {
          "id": "cpr_step_4",
          "stepNumber": 4,
          "instruction": "Push hard and fast at least 2 inches deep at 100-120 compressions per minute",
          "imageResource": "cpr_compression",
          "voiceScript": "Compress chest hard and fast",
          "warnings": "Allow complete recoil between compressions",
          "isEmergencyStep": false
        },
        {
          "id": "cpr_step_5",
          "stepNumber": 5,
          "instruction": "Give 30 compressions, then 2 rescue breaths",
          "imageResource": "cpr_rescue_breath",
          "voiceScript": "Continue cycles of 30 compressions and 2 breaths",
          "warnings": "Minimize interruptions",
          "isEmergencyStep": false
        }
      ]
    },
    {
      "id": "choking",
      "title": "Choking",
      "category": "Critical",
      "description": "Emergency response for blocked airways",
      "iconResource": "ic_choking",
      "searchKeywords": "choking,heimlich,airway,blocked,throat",
      "estimatedTime": "2-5 minutes",
      "difficulty": "Intermediate",
      "isFavorite": false,
      "steps": [
        {
          "id": "choking_step_1",
          "stepNumber": 1,
          "instruction": "Ask 'Are you choking?' Look for universal choking sign",
          "imageResource": "choking_sign",
          "voiceScript": "Determine if person is choking",
          "warnings": "If they can speak or cough, encourage coughing",
          "isEmergencyStep": false
        },
        {
          "id": "choking_step_2",
          "stepNumber": 2,
          "instruction": "Stand behind person, wrap arms around waist",
          "imageResource": "choking_position",
          "voiceScript": "Position yourself behind the victim",
          "warnings": "For pregnant women, place hands higher on chest",
          "isEmergencyStep": false
        },
        {
          "id": "choking_step_3",
          "stepNumber": 3,
          "instruction": "Make fist with one hand, place above navel below ribcage",
          "imageResource": "choking_fist_position",
          "voiceScript": "Position fist correctly for abdominal thrusts",
          "warnings": "Avoid pressing on ribs or breastbone",
          "isEmergencyStep": false
        },
        {
          "id": "choking_step_4",
          "stepNumber": 4,
          "instruction": "Give quick upward thrusts into abdomen",
          "imageResource": "choking_thrust",
          "voiceScript": "Perform abdominal thrusts forcefully",
          "warnings": "Each thrust should be separate and distinct",
          "isEmergencyStep": false
        },
        {
          "id": "choking_step_5",
          "stepNumber": 5,
          "instruction": "Continue until object is expelled or person becomes unconscious",
          "imageResource": null,
          "voiceScript": "Keep performing thrusts until successful",
          "warnings": "If unconscious, begin CPR",
          "isEmergencyStep": true
        }
      ]
    },
    {
      "id": "burns",
      "title": "Burns",
      "category": "Common",
      "description": "Treatment for thermal injuries",
      "iconResource": "ic_burns",
      "searchKeywords": "burns,fire,heat,thermal,skin,injury",
      "estimatedTime": "5-10 minutes",
      "difficulty": "Basic",
      "isFavorite": false,
      "steps": [
        {
          "id": "burns_step_1",
          "stepNumber": 1,
          "instruction": "Remove person from heat source safely",
          "imageResource": "burns_safety",
          "voiceScript": "Ensure safety first",
          "warnings": "Do not put yourself at risk",
          "isEmergencyStep": true
        },
        {
          "id": "burns_step_2",
          "stepNumber": 2,
          "instruction": "Cool burn with cool running water for 10-20 minutes",
          "imageResource": "burns_cool_water",
          "voiceScript": "Cool the burn immediately",
          "warnings": "Do not use ice or very cold water",
          "isEmergencyStep": false
        },
        {
          "id": "burns_step_3",
          "stepNumber": 3,
          "instruction": "Remove jewelry and loose clothing before swelling begins",
          "imageResource": null,
          "voiceScript": "Remove items that may constrict",
          "warnings": "Do not remove stuck clothing",
          "isEmergencyStep": false
        },
        {
          "id": "burns_step_4",
          "stepNumber": 4,
          "instruction": "Cover burn loosely with sterile gauze",
          "imageResource": "burns_bandage",
          "voiceScript": "Protect the burn area",
          "warnings": "Do not use cotton or adhesive bandages directly on burn",
          "isEmergencyStep": false
        },
        {
          "id": "burns_step_5",
          "stepNumber": 5,
          "instruction": "Seek medical attention for severe burns",
          "imageResource": null,
          "voiceScript": "Get professional medical help",
          "warnings": "Burns larger than palm size need medical care",
          "isEmergencyStep": false
        }
      ]
    },
    {
      "id": "cuts",
      "title": "Cuts and Wounds",
      "category": "Common",
      "description": "Treatment for bleeding injuries",
      "iconResource": "ic_cuts",
      "searchKeywords": "cuts,wounds,bleeding,bandage,injury",
      "estimatedTime": "5-15 minutes",
      "difficulty": "Basic",
      "isFavorite": false,
      "steps": [
        {
          "id": "cuts_step_1",
          "stepNumber": 1,
          "instruction": "Apply direct pressure with clean cloth",
          "imageResource": "cuts_pressure",
          "voiceScript": "Control bleeding immediately",
          "warnings": "Use gloves if available",
          "isEmergencyStep": false
        },
        {
          "id": "cuts_step_2",
          "stepNumber": 2,
          "instruction": "Elevate wounded area above heart if possible",
          "imageResource": "cuts_elevate",
          "voiceScript": "Raise the injured area",
          "warnings": "Only if no fracture is suspected",
          "isEmergencyStep": false
        },
        {
          "id": "cuts_step_3",
          "stepNumber": 3,
          "instruction": "Clean wound gently with water once bleeding stops",
          "imageResource": "cuts_clean",
          "voiceScript": "Clean the wound carefully",
          "warnings": "Do not remove large embedded objects",
          "isEmergencyStep": false
        },
        {
          "id": "cuts_step_4",
          "stepNumber": 4,
          "instruction": "Apply antibiotic ointment if no allergies",
          "imageResource": null,
          "voiceScript": "Apply topical antibiotic",
          "warnings": "Check for medication allergies first",
          "isEmergencyStep": false
        },
        {
          "id": "cuts_step_5",
          "stepNumber": 5,
          "instruction": "Cover with sterile bandage and monitor for infection",
          "imageResource": "cuts_bandage",
          "voiceScript": "Bandage and monitor the wound",
          "warnings": "Change bandage daily or if wet/dirty",
          "isEmergencyStep": false
        }
      ]
    },
