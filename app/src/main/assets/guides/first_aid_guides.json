      "difficulty": "Advanced",
      "isFavorite": false,
      "steps": [
        {
          "id": "snake_step_1",
          "stepNumber": 1,
          "instruction": "Call emergency services immediately",
          "imageResource": null,
          "voiceScript": "Get medical help fast",
          "warnings": "Antivenom may be needed",
          "isEmergencyStep": true
        },
        {
          "id": "snake_step_2",
          "stepNumber": 2,
          "instruction": "Keep person calm and still",
          "imageResource": null,
          "voiceScript": "Minimize movement",
          "warnings": "Movement spreads venom faster",
          "isEmergencyStep": true
        },
        {
          "id": "snake_step_3",
          "stepNumber": 3,
          "instruction": "Remove jewelry before swelling begins",
          "imageResource": null,
          "voiceScript": "Remove constricting items",
          "warnings": "Swelling may occur rapidly",
          "isEmergencyStep": false
        },
        {
          "id": "snake_step_4",
          "stepNumber": 4,
          "instruction": "Position bite below heart level if possible",
          "imageResource": "snake_position",
          "voiceScript": "Keep bite area lower",
          "warnings": "Gravity helps slow venom spread",
          "isEmergencyStep": false
        },
        {
          "id": "snake_step_5",
          "stepNumber": 5,
          "instruction": "Clean bite with soap and water, cover with clean bandage",
          "imageResource": "snake_clean",
          "voiceScript": "Clean and cover the wound",
