      "difficulty": "Intermediate",
      "isFavorite": false,
      "steps": [
        {
          "id": "fracture_step_1",
          "stepNumber": 1,
          "instruction": "Do not move the person unless in immediate danger",
          "imageResource": null,
          "voiceScript": "Keep the person still",
          "warnings": "Moving may worsen injury",
          "isEmergencyStep": true
        },
        {
          "id": "fracture_step_2",
          "stepNumber": 2,
          "instruction": "Call emergency services immediately",
          "imageResource": null,
          "voiceScript": "Get professional medical help",
          "warnings": "Fractures require medical treatment",
          "isEmergencyStep": true
        },
        {
          "id": "fracture_step_3",
          "stepNumber": 3,
          "instruction": "Immobilize the injured area with splint",
          "imageResource": "fracture_splint",
          "voiceScript": "Prevent movement of broken bone",
          "warnings": "Splint above and below fracture site",
          "isEmergencyStep": false
        },
        {
          "id": "fracture_step_4",
          "stepNumber": 4,
          "instruction": "Apply ice pack wrapped in cloth",
          "imageResource": "fracture_ice",
          "voiceScript": "Reduce swelling and pain",
          "warnings": "Do not apply ice directly to skin",
          "isEmergencyStep": false
        },
        {
          "id": "fracture_step_5",
          "stepNumber": 5,
          "instruction": "Monitor for shock and treat accordingly",
          "imageResource": null,
          "voiceScript": "Watch for signs of shock",
          "warnings": "Pale skin, rapid pulse, weakness",
          "isEmergencyStep": false
        }
      ]
    },
